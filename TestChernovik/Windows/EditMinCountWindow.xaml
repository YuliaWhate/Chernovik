<Window x:Class="TestChernovik.Windows.EditMinCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestChernovik.Windows"
        mc:Ignorable="d"
        Title="Изменение минимального количества материала" Height="200" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="5 50 5 5">
            <TextBlock Text="Минимальное количество"/>
            <TextBox x:Name="txtMinCount"/>
            <Button x:Name="btnEditMinCount" Width="200" Content="Изменить" Height="35" Margin="10" Click="btnEditMinCount_Click"/>
        </StackPanel>
    </Grid>
</Window>
